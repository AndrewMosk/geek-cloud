<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootNode" alignment="CENTER" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: linear-gradient(#fff 0%, #eee 10%, #ddd 90%, #bbb 100%);" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="com.geekbrains.geek.cloud.client.MainController">
    <HBox>
        <VBox alignment="TOP_CENTER">
            <ListView fx:id="filesListClient" VBox.vgrow="ALWAYS" />
            <Button onAction="#pressOnUploadBtn" text="Загрузить" />
        </VBox>
        <VBox alignment="TOP_CENTER">
            <ListView fx:id="filesListServer" VBox.vgrow="ALWAYS" />
            <Button onAction="#pressOnDownloadBtn" text="Скачать" />
        </VBox>
    </HBox>

</VBox>
